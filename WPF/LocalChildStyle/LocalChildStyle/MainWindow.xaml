<Window x:Class="LocalChildStyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalChildStyle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
      <!--Set Style for perticular Button type and later change the button height and width of button using inside button element.-->
    <Grid.Resources>
      <Style TargetType="Button">
        <Setter Property="Background" Value="BlanchedAlmond"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="60"/>
      </Style>
    </Grid.Resources>

    <Button Content="Hello Harshal Raverkar" Margin="296,71,296,288"/>
    <Button Content="Hello Desh" Margin="296,159,296,10" Height="20" Width="150"/>
  </Grid>
</Window>
