<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.Resources>
      <SolidColorBrush x:Key="brsh" Color="Red"/>
      <SolidColorBrush x:Key="brush" Color="DodgerBlue"/>
    </Grid.Resources>
    <Label Content="Hello Harshal Raverkar" Foreground="{StaticResource brsh}"></Label>
    <Button Content="Hello Harshal" Height="40" Width="80" Background="{DynamicResource brush}" Click="Button_Click"/>
  </Grid>
  
  
  
</Window>
